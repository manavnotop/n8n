generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Credential {
  id            String        @id @default(uuid())
  platform      String
  title         String        @unique
  data          Json
}

model Workflow{
  id          String        @id @default(uuid())
  title       String        @unique
  enabled     Boolean       @default(false)
  nodes       Json
  connection  Json
}

model Webhook {
  id          String        @id @default(uuid())
  title       String        @unique
  method      Method       
  path        String 
  header      String
  secret      String
}

enum Method {
  GET
  POST 
}

model User {
  id          String        @id @default(uuid())
  
}